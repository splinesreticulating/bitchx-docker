echo
echo "		[1;30mÚ[0mÄÄ[1;37mÄÄ[0mÄÄ[1;30mÄÄÄÄ[1;37mú                       [1;37mú[1;30mÄÄÄÄ[0mÄÄ[1;37mÄÄ[0mÄÄ[1;30m¿[0m"

echo "		[1;36m³                                             [1;36m³"
