echo "[3C[36mŞ[1;34;46m°±[0;36mİ[37m  [36mŞ[1;34;46m °±°°[0;36mİ[37m  [36mŞ[1;34;46m°±[40mİ[0;36mİ[1;34;46m°°[0;36mİ[1;34;46m °°[0m[7C[36mİ[1;34;46m°°[0;36mİ[1;34;46m °°[0;36mİ[37m  [36mŞ[1;34;46m°±[40mİ[0m"
echo "[4C[36mßßÛÜÜÛßß[37m [36mßßÛÜÜÛßß[37m [36mŞßß[37m [1;34;46m   [0m[7C[36mŞßß[37m  [36mßßÛÜÜÛßß[37m"
