alias away {
@awaystat=[1]
  if ([$0])
 {
@amsg=[$0-]
mme is away!$(amsg) [osiris!log]
//away $amsg
}
{
mme is away!$(awaymsg) [osiris!log]
//away $awaymsg
}
@osta = time()
}

alias back {
@awaystat=[0]
if (osta)
{
@gtime=[$tdiff2(${time() - osta})]
if ([$0]) {
@bmsg=[$0-]
mme is back!$(bmsg) [gone!$(gtime)]
}{
mme is back!$(backmsg) [gone!$(gtime)]
}
^assign -osta
//back
if ([$awayl]==[on])
{
echo $G you are setback. /readlog to read msgs, /remlog to delete them.
}
}
}