alias away {
@awaystat=[1]
  if ([$0]) {
  if ([$awayl]==[on]) {
  @amsg=[$0-]
  mme is away: \($(amsg)\) [BX-MsgLog On]
  //away $amsg
}
  if ([$awayl]==[off]) {
  @amsg=[$0-]
  mme is away: \($(amsg)\) [BX-MsgLog Off]
  //away $amsg
 }
}{
  if ([$awayl]==[on]) {
  mme is away: \($(awaymsg)\) [BX-MsgLog On]
  //away $awaymsg
}
  if ([$awayl]==[off]) {
  mme is away: \($(awaymsg)\) [BX-MsgLog Off]
  //away $awaymsg
 }
}
@osta = time()
}

alias back {
@awaystat=[0]
if (osta)
{
@gtime=[$tdiff(${time() - osta})]
mme is back from the dead. Gone $(gtime)
}
^assign -osta
//back
if ([$awayl]==[on])
{
echo $G you are setback. /readlog to read msgs, /remlog to delete them.
}
}