alias away {
@awaystat=[1]
  if ([$0]) {
  if ([$awayl]==[on]) {
  @amsg=[$0-]
  mme is away\($(amsg)\) log\(yes\) os\($(osrel)\)
  //away $amsg
}
  if ([$awayl]==[off]) {
  @amsg=[$0-]
  mme is away\($(awaymsg)\) log\(no\) os\($(osrel)\)
  //away $amsg
 }
}{
  if ([$awayl]==[on]) {
  mme is away\($(awaymsg)\) log\(yes\) os\($(osrel)\)
  //away $awaymsg
}
  if ([$awayl]==[off]) {
  mme is away\($(awaymsg)\) log\(no\) os\($(osrel)\)
  //away $awaymsg
 }
}
@osta = time()
}

alias back {
@awaystat=[0]
if (osta)
{
@gtime=[$tdiff2(${time() - osta})]
if ([$0]) {
@bmsg=[$0-]
mme is back\($(bmsg)\) gone\($(gtime)\) os\($(osrel)\)
}{
mme is back\($(backmsg)\) gone\($(gtime)\) os\($(osrel)\)
}
^assign -osta
//back
if ([$awayl]==[on])
{
echo $G you are setback. /readlog to read msgs, /remlog to delete them.
}
}
}