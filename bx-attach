#!/bin/bash
# Attach to BitchX Docker session

if ! docker ps | grep -q bitchx_session; then
    echo "Error: BitchX container is not running"
    echo "Start it with: ./bx-start"
    exit 1
fi

echo "Connecting to BitchX..."
echo "To detach: Press Ctrl+P, Ctrl+Q"
echo ""

docker attach bitchx_session
